name: Update Data from Google Sheets

on:
  workflow_dispatch: # manual trigger
  schedule:
    - cron: "0 */2 * * *" # every 2 hours

permissions:
  contents: write # ✅ allow pushing commits

jobs:
  update-data:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }} # ✅ use built-in token

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22

      - name: Install dependencies
        run: npm install

      - name: Fetch latest Google Sheets data
        run: node scripts/fetch-packages.js
        env:
          NEXT_PUBLIC_SHEET_ID: ${{ secrets.NEXT_PUBLIC_SHEET_ID }}
          NEXT_PUBLIC_SHEET_NAME_MALDIVES: ${{ secrets.NEXT_PUBLIC_SHEET_NAME_MALDIVES }}
          NEXT_PUBLIC_SHEET_NAME_EXCURSIONS: ${{ secrets.NEXT_PUBLIC_SHEET_NAME_EXCURSIONS }}
          NEXT_PUBLIC_SHEET_NAME_WATERSPORTS: ${{ secrets.NEXT_PUBLIC_SHEET_NAME_WATERSPORTS }}
          NEXT_PUBLIC_SHEET_NAME_RESORTS: ${{ secrets.NEXT_PUBLIC_SHEET_NAME_RESORTS }}
          NEXT_PUBLIC_SHEET_NAME_DOMESTIC: ${{ secrets.NEXT_PUBLIC_SHEET_NAME_DOMESTIC }}
          NEXT_PUBLIC_SHEET_NAME_INTERNATIONAL: ${{ secrets.NEXT_PUBLIC_SHEET_NAME_INTERNATIONAL }}

      - name: Commit and push updated data
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add lib/*.json
          git commit -m "Update data from Google Sheets" || echo "No changes to commit"
          git push
